!!!
%html
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    :css
      *{-webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box}body{font-family:"Helvetica Neue",Helvetica,Arial,sans-serif;font-size:14px;line-height:1.428571429;color:#333}h3{font-size:24px;margin-top:20px;margin-bottom:10px;font-family:inherit;font-weight:500;line-height:1.1;color:inherit}.table,.well{margin-bottom:20px}.well{min-height:20px;padding:19px;background-color:#f5f5f5;border:1px solid #e3e3e3;border-radius:4px;-webkit-box-shadow:inset 0 1px 1px rgba(0,0,0,.05);box-shadow:inset 0 1px 1px rgba(0,0,0,.05)}.table,.table-bordered>tbody>tr>td,.table-bordered>tbody>tr>th,.table-bordered>tfoot>tr>td,.table-bordered>tfoot>tr>th,.table-bordered>thead>tr>td,.table-bordered>thead>tr>th{border:1px solid #ddd}.table{width:100%;max-width:100%;background-color:transparent;border-collapse:collapse;border-spacing:0}.table>tbody>tr>td,.table>tbody>tr>th,.table>tfoot>tr>td,.table>tfoot>tr>th,.table>thead>tr>td,.table>thead>tr>th{padding:8px;line-height:1.428571429;vertical-align:top;border-top:1px solid #ddd}th{text-align:left}td,th{padding:0}.container{margin-right:auto;margin-left:auto;padding-left:15px;padding-right:15px}@media (min-width:768px){.container{width:750px}}@media (min-width:992px){.container{width:970px}}@media (min-width:1200px){.container{width:1170px}}@media (min-width:1400px){.container{width:1370px}}.container:after,.container:before{content:" ";display:table}.container:after{clear:both}
  %body
    .container
      %h1 Your Weather Update
      .well
        %h3= @forecast.city
        %table.table.table-bordered
          %tr
            %th
            %th Apixu
            %th Darksky
            %th Weatherbit
          %tr
            %td Max Temperature (°C)
            %td= @forecast.max_temp[0] if @forecast.max_temp
            %td= @forecast.max_temp[1] if @forecast.max_temp
            %td= @forecast.max_temp[2] if @forecast.max_temp
          %tr
            %td Min Temperature (°C)
            %td= @forecast.min_temp[0] if @forecast.min_temp
            %td= @forecast.min_temp[1] if @forecast.min_temp
            %td= @forecast.min_temp[2] if @forecast.min_temp
          %tr
            %td Precipitation Probability (%)
            %td= @forecast.precipitation[0] if @forecast.precipitation
            %td= @forecast.precipitation[1] if @forecast.precipitation
            %td= @forecast.precipitation[2] if @forecast.precipitation
          %tr
            %td Weather Conditions
            %td= @forecast.condition[0].humanize if @forecast.condition
            %td= @forecast.condition[1].humanize if @forecast.condition
            %td= @forecast.condition[2].humanize if @forecast.condition
        %p= 'Forecast is made on: ' + @forecast.created_at.getlocal.strftime('%A, %d %B %Y %H:%M:%S')
        %p= 'Forecast is made for: ' + @forecast.created_at.getlocal.tomorrow.strftime('%A, %d %B %Y')